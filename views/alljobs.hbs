<div class="container">
    <h1 class="text-center">All Jobs</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Actions</th>
                <th>Job ID</th>
                <th>Title</th>
                <th>Location</th> 
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td><a href="/admin/deljob/{{id}}"><i class="fas fa-trash"></i></a></td>
                <td><a href="/admin/getalljobs/{{id}}">{{id}}</a></td>
                <td>{{title}}</td>
                <td>{{location}}</td>
            </tr>    
            {{/each}}    
        </tbody>
    </table>
</div>